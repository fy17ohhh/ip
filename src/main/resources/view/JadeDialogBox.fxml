<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.text.Font?>

<fx:root alignment="TOP_LEFT" type="javafx.scene.layout.HBox" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1">
    <children>
        <ImageView fx:id="displayPicture" fitHeight="65.0" fitWidth="65.0" pickOnBounds="true" preserveRatio="true">
            <image>
                <Image url="@../images/jade.png" />
            </image></ImageView>
        <Label fx:id="dialog" minWidth="300.0" alignment="CENTER" contentDisplay="LEFT" lineSpacing="1.5" style="-fx-background-radius: 10px; -fx-background-color: #705744; -fx-padding: 10px;" textFill="WHITE" wrapText="true" HBox.hgrow="ALWAYS">
         <font>
            <Font name="Monaco" size="14.0" />
         </font>
         <padding>
            <Insets bottom="10.0" left="5.0" right="5.0" top="10.0" />
         </padding>
         <HBox.margin>
            <Insets right="5.0" top="5.0" />
         </HBox.margin></Label>
    </children>
    <padding>
        <Insets bottom="15.0" left="5.0" right="5.0" top="15.0" />
    </padding>
</fx:root>
